<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
  <link rel="stylesheet" href="/style1.css">
</head>

<body>
  <div class="container my-5">
    <div class="card bg-light">
      <div class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title text-center">Login</h4>
        <p class="text-center">Login with your account</p>

        <form action="/login" method="POST" onsubmit="return validateForm()">
          <% if (typeof error !== 'undefined') { %>
          <p class="text-danger text-center">
            <%= error %>
          </p>
          <% } %>
          <div class="mb-3">
            <label for="usernameF" class="form-label">Username</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
              <input type="text" id="usernameF" class="form-control" placeholder="Enter your Email" name="email" oninput="clearErr('usernameErrorMsg')" />
            </div>
            <span id="usernameErrorMsg" class="text-danger"></span>

          </div>

          <div class="mb-3">
            <label for="passwordF" class="form-label">Password</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fa fa-lock"></i></span>
              <input type="password" id="passwordF" class="form-control" name="password" placeholder="Enter your Password" oninput="clearErr('passwordErrorMsg')" />
            </div>
            <span id="passwordErrorMsg" class="text-danger"></span>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary w-100">Login</button>
          </div>
          <p class="divider-text text-center my-3">
            <hr>
          </p>
          <div class="d-grid mb-3">
            <a href="#" class="btn btn-info w-100 mb-2"><i class="fab fa-twitter"></i> Login via Twitter</a>
            <a href="#" class="btn btn-primary w-100"><i class="fab fa-facebook-f"></i> Login via Facebook</a>
          </div>
          <p class="text-center">Don't have an account? <a href="/signup">Sign Up</a></p>
          <div class="d-flex justify-content-center">
            <p class="text-center"></p> <a href="/admin/login">Admin Login</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>

  <script>
    function validateForm() {
      const username = document.getElementById('usernameF').value.trim();
      const password = document.getElementById('passwordF').value.trim();
      const usernameErrorMsg = document.getElementById('usernameErrorMsg');
      const passwordErrorMsg = document.getElementById('passwordErrorMsg');
      let isValid = true;

      usernameErrorMsg.textContent = '';
      passwordErrorMsg.textContent = '';

      if (username === '') {
        usernameErrorMsg.textContent = 'Username is required!';
        isValid = false;
      }
      if (password === '') {
        passwordErrorMsg.textContent = 'Password is required';
        isValid = false;
      }
      return isValid;
    }

    function clearErr(id) {
      document.getElementById(id).textContent = '';
    };
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
